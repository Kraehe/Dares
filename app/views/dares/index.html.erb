<p id="notice"><%= notice %></p>

<h1>Dares</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dares.each do |dare| %>
      <tr>
        <td><%= dare.name %></td>
        <td><%= link_to 'Show', dare %></td>
        <td><%= link_to 'Edit', edit_dare_path(dare) %></td>
        <td><%= link_to 'Destroy', dare, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Dare', new_dare_path, class:"btn btn-primary"  %>
